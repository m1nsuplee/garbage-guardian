{
  "name": "ttb",
  "private": true,
  "type": "module",
  "author": {
    "name": "m1nsuplee",
    "url": "https://github.com/m1nsuplee"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "(apps|packages)/**/*.(js|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.4",
    "eslint-config-turbo": "^1.12.4",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.15.2",
  "engines": {
    "node": ">=18.17.0"
  }
}
